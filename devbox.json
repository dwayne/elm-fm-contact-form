{
  "packages": [
    "github:dwayne/deploy/e6b015c6ce926275db378e6370429f60e649fc9d",
    "elmPackages.elm@latest",
    "elmPackages.elm-format@latest",
    "elmPackages.elm-test@latest",
    "gnumake@latest",
    "nodejs@22",
    "nushell@latest",
    "pnpm@latest"
  ],
  "env": {
    "ASTRO_BASE": "/elm-fm-contact-form/",
    "PATH": "$DEVBOX_PROJECT_ROOT/bin:$DEVBOX_PROJECT_ROOT/app/node_modules/.bin:$DEVBOX_PROJECT_ROOT/workshop/node_modules/.bin:$PATH",
    "project": "$DEVBOX_PROJECT_ROOT"
  },
  "shell": {
    "init_hook": [
      "if [ ! -d $project/workshop/node_modules ]; then cd $project/workshop && pnpm install --silent; fi",
      "if [ ! -d $project/app/node_modules ]; then cd $project/app && pnpm install --silent; fi",
      "alias wd='workshop dev'",
      "alias wb='workshop build'",
      "alias wp='workshop preview'",
      "alias d='app dev'",
      "alias b='app build'",
      "alias p='app preview'",
      "alias f='app format'",
      "alias t='app test'",
    ]
  }
}
