{
  "packages": [
    "nodejs@22",
    "pnpm@latest"
  ],
  "env": {
    "PATH": "$DEVBOX_PROJECT_ROOT/bin:$DEVBOX_PROJECT_ROOT/workshop/node_modules/.bin:$PATH",
    "project": "$DEVBOX_PROJECT_ROOT"
  },
  "shell": {
    "init_hook": [
      "[[ -f $project/init.sh ]] && . $project/init.sh",
      "[[ -d $project/workshop ]] && cd $project/workshop && pnpm install --silent"
    ]
  }
}
