{
  "packages": [
    "git+ssh://git@github.com/dwayne/nix-elm-tools?rev=6590fb92a674abe6742c198cd08ab800c8ca71a0",
    "elmPackages.elm@latest",
    "nodejs@22",
    "pnpm@latest"
  ],
  "env": {
    "PATH": "$DEVBOX_PROJECT_ROOT/bin:$DEVBOX_PROJECT_ROOT/workshop/node_modules/.bin:$PATH",
    "app_build": "$DEVBOX_PROJECT_ROOT/app/dist",
    "project": "$DEVBOX_PROJECT_ROOT"
  },
  "shell": {
    "init_hook": [
      "[[ ! -d $project/workshop/node_modules ]] && cd $project/workshop && pnpm install --silent",
      "alias wd='workshop dev'",
      "alias wb='workshop build'",
      "alias wp='workshop preview'"
    ]
  }
}
