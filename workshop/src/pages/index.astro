---
import "@/styles/workshop.scss";

import Button from "@/components/Button.astro";
import Checkbox from "@/components/Checkbox.astro";
import CheckboxField from "@/components/CheckboxField.astro";
import Field from "@/components/Field.astro";
import Group from "@/components/Group.astro";
import Icon from "@/components/Icon.astro";
import Label from "@/components/Label.astro";
import QueryType from "@/components/QueryType.astro";
import Radio from "@/components/Radio.astro";
import RadioButton from "@/components/RadioButton.astro";
import Swatch from "@/components/Swatch.astro";
import Textarea from "@/components/Textarea.astro";
import TextInput from "@/components/TextInput.astro";
import Toast from "@/components/Toast.astro";
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=1" />

    <title>Contact form | Frontend Workshop</title>
  </head>
  <body>
    <h1>Contact form</h1>

    <h2>Toast</h2>

    <Toast title="Message Sent!">
      Thanks for completing the form. We'll be in touch soon!
    </Toast>

    <h2>Icon</h2>

    <p class="p-100 bg-grey-900"><Icon type="check" /></p>

    <h2>Field</h2>

    <Field
      id="field1"
      title="First Name"
      Control={TextInput}
    />

    <Field
      id="field2"
      title="Last Name"
      Control={TextInput}
      error="error text"
    />

    <Field
      id="field3"
      title="Query Type"
      Control={QueryType}
    />

    <Field
      id="field4"
      title="Query Type"
      Control={QueryType}
      error="error text"
    />

    <h2>Checkbox Field</h2>

    <p><CheckboxField /></p>
    <p><CheckboxField isChecked={true} /></p>

    <h2>Radio Group</h2>

    <Group>
      <RadioButton name="group1" text="General Enquiry" />
      <RadioButton name="group1" text="Support Request" />
    </Group>

    <h2>Radio Button</h2>

    <p><RadioButton /></p>
    <p><RadioButton isChecked={true} /></p>

    <h2>Label</h2>

    <p><Label /></p>
    <p><Label id="label1" /></p>
    <p><Label id="label2" title="First Name" /></p>
    <p><Label id="label3" title="Last Name" isRequired={false} /></p>

    <h2>Textarea</h2>

    <p><Textarea /></p>

    <h2>Text Input</h2>

    <p><TextInput /></p>
    <p><TextInput isDirty={true} /></p>
    <p><TextInput isValid={true} /></p>
    <p><TextInput isDirty={true} isValid={true} /></p>

    <h2>Checkbox</h2>

    <p><Checkbox /></p>
    <p><Checkbox isChecked /></p>

    <h2>Radio</h2>

    <p><Radio /></p>
    <p><Radio isChecked /></p>

    <p></p>

    <h2>Button</h2>

    <p><Button>Text</Button></p>

    <h2>Colors</h2>

    <Swatch name="Grey 900" color="grey-900" />
    <Swatch name="Grey 500" color="grey-500" />
    <Swatch name="White" color="white" />
    <Swatch name="Green 600" color="green-600" />
    <Swatch name="Green 200" color="green-200" />
    <Swatch name="Red (Errors)" color="red" />
  </body>
</html>
