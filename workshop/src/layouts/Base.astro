---
import globalStylesUrl from "@/styles/index.scss?url";

const { title, variant } = Astro.props;

const pageTitle = [
  title,
  "Contact form",
  "Frontend Workshop"
].filter(Boolean).join(" | ");
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=1" />
    <base href={import.meta.env.BASE_URL} />

    <title>{pageTitle}</title>

    <link rel="stylesheet" href={globalStylesUrl} />
  </head>
  <body class="body" data-variant={variant}>
    <slot></slot>
  </body>
</html>
