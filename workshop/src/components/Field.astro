---
import Label from "@/components/Label.astro";

const { id, title, isRequired = true, Control, error, ...rest } = Astro.props;
---
<div class="field">
  {title && <Label {...{id, title, isRequired}} />}
  <Control
    {id}
    isDirty={error ? true : false}
    isValid={error ? false : true}
    {...rest}
  />
  {error && <div class="field__error">{error}</div>}
</div>
