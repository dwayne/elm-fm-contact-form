#!/usr/bin/env nu

# Start the development server
def "main dev" [] {
  cd $"($env.project)/workshop"; pnpm dev
}

# Build the project and write it to disk
def "main build" [] {
  cd $"($env.project)/workshop"; pnpm build
}

# Preview the build locally
def "main preview" [] {
  cd $"($env.project)/workshop"; pnpm preview
}

# Remove development and build artifacts
def "main clean" [] {
  cd $"($env.project)/workshop"

  rm -rf .astro dist node_modules
}

def main [] {}
