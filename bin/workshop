#!/usr/bin/env bash
#
# Usage: workshop (dev|build|preview)
#

set -euo pipefail

project="${project:?}"
cmd="${1:-}"

# MAIN

cd "$project/workshop"

case "$cmd" in
  dev)
    pnpm dev
    ;;

  build)
    pnpm build
    ;;

  preview)
    pnpm preview
    ;;

  *)
    printf "Unknown command: \"$cmd\"\n"
    exit 1
    ;;
esac
